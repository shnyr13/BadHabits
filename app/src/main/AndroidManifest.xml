<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="padev.badhabits">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BadHabitThemeNoActionBar">
        <activity android:name=".application.ui.activity.HomeActivity"
            android:theme="@style/BadHabitThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".application.ui.activity.HabitActivity"
            android:theme="@style/BadHabitThemeNoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".application.ui.activity.HomeActivity" />

        </activity>

        <activity android:name=".application.ui.activity.NotificationListActivity"
            android:theme="@style/BadHabitThemeNoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".application.ui.activity.HomeActivity" />

        </activity>

        <activity android:name=".application.ui.activity.SettingsActivity"
            android:theme="@style/BadHabitThemeNoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".application.ui.activity.HomeActivity" />

        </activity>

        <activity android:name=".application.ui.activity.AboutActivity"
            android:theme="@style/BadHabitThemeNoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".application.ui.activity.HomeActivity" />

        </activity>

    </application>

</manifest>